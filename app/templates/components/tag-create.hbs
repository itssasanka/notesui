<div id="tag-create">

    {{#if create}}

        {{error-block errors=tag.errors.name}}

        <form {{action "createNewTag" on="submit"}}>
            {{input value=changeset.name key-up="toggleSubmit" name="name" placeholder="Tag name"}}
            <button type="submit" disabled id="createTag" class="small-button disabled">
                Submit
            </button>
            <a class="button-link margin-5" {{action "toggleCreate"}}>
                Cancel
            </a>
        </form>

    {{else}}

        <a class="button-link margin-5" {{action "toggleCreate"}}>Create a tag</a>

    {{/if}}

</div>

{{yield}}
